<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.ed.haebeop.persistence.UserMapper">
    <!-- 회원 목록 보기 -->
    <select id="UserList" resultType="kr.ed.haebeop.domain.User">
        SELECT * FROM user order by regdate desc;
    </select>

    <!-- 회원 상세 정보 보기 -->
    <select id="getUser" resultType="kr.ed.haebeop.domain.User">
        select * from user where id=#{id}
    </select>
    <!-- 회원 수 카운트 -->
    <select id="userCount" resultType="integer">
        select count(*) from user;
    </select>

    <!-- 로그인을 컨트롤러에서 처리 -->
    <select id="signIn" resultType="kr.ed.haebeop.domain.User">
        select * from user where id=#{id}
    </select>

    <!-- 로그인 : 서비스에서 처리 -->
    <select id="loginCheck" resultType="kr.ed.haebeop.domain.User">
        select id, pw, name from user where id=#{id}
    </select>

    <!-- 로그인 : Ajax에서 처리 -->
    <select id="login" resultType="kr.ed.haebeop.domain.User">
        select id, pw, name from user where id=#{id}
    </select>

    <!-- 회원 가입 -->
    <insert id="userInsert">
        inser into user values (#{id}, #{pw}, #{name}, #{email}, #{tel}, #{addr1}, #{addr2}, #{postcode}, default, #{birth}, default, default)
    </insert>

    <!-- 회원 탈퇴 -->
    <delete id="userDelete">
        delete from user where id=#{id}
    </delete>

    <!-- 회원정보 수정 -->
    <update id="userEdit">
        update user set pw=#{pw }, name=#{name}, email=#{email}, tel=#{tel},  addr1=#{addr1 }, addr2=#{addr2 }, postcode=#{postcode } where id = #{id }
    </update>

    <!-- "findByEmail"과 관련된 MyBatis Mapper(xml) -->
    <select id="findByEmail" resultType="java.lang.String">
        select id from user where email=#{email}
    </select>

    <select id="findPassword" resultType="java.lang.String">
        select pw from user where id=#{id} and email=#{email}
    </select>
</mapper>